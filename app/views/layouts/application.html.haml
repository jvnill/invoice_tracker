!!! 5
%html
  %head
    %title Invoice Tracker
    = stylesheet_link_tag 'application', media: 'all', data: { turbolinks_track: true }
    = javascript_include_tag 'application', data: { turbolinks_track: true }
    = csrf_meta_tags

    %link{ href: 'http://fonts.googleapis.com/css?family=Roboto', rel: 'stylesheet', type: 'text/css' }

  %body
    #page-container
      #header= render "shared/#{current_user ? 'private' : 'public'}_nav"

      #content
        - if lookup_context.exists?('nav', params[:controller], true)
          #subnav= render 'nav'

        = render 'shared/flash_message'
        = yield

      #footer
        .wrapper{ class: ('full-width' if current_user) }
          %div{ style: 'float:right;' } Site Design by #{link_to 'Nina Rouselle De Polonia-Nill', 'http://behance.net/ninyanernel', target: '_blank'}
          %div{ style: 'float:left;' } Code by #{link_to 'Jim Ruther Nill', 'http://jimlabs.heroku.com', target: '_blank'}
          %div{ style: 'text-align:center;' } &copy; Copyright #{Date.today.year}
