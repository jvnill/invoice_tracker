.row
  .small-12.column
    %h3.subheader Payment Details

.row.select-wrapper
  - if payment_details.any?
    .small-12.column
      = select :payment, :detail, payment_details.map { |payment_detail| [payment_detail.title, payment_detail.id] }, { include_blank: true, selected: defined?(payment_detail) && payment_detail.id }
      :javascript
        SIT.Common.bindPaymentDetailSelect()
