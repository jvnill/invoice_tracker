= form_for current_user, html: { remote: true } do |f|
  %section.inputs.centered
    %h3 User Details

    = f.fields_for :user_detail do |ud|
      - %w[name address1 address2 address3 country postal_code contact_number].each do |attr|
        %div
          %label= attr.titleize
          = ud.text_field attr.to_sym, class: 'simple'

  %section.buttons.centered
    = f.submit 'Save', class: 'flat big'
    %br
    %br
