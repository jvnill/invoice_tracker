= form_for current_user, html: { remote: true } do |f|
  = f.fields_for :user_detail do |uf|
    .row
      .small-12.column
        %h3.subheader Profile

    .row
      .small-12.medium-6.column
        %label
          Name
          = uf.text_field :name

      .small-12.medium-6.column
        %label
          Password
          = f.password_field :password

    .row
      .small-12.medium-12.large-4.column
        %label
          Address 1
          = uf.text_field :address1

      .small-12.medium-6.large-4.column
        %label
          Address 2
          = uf.text_field :address2

      .small-12.medium-6.large-4.column
        %label
          Address 3
          = uf.text_field :address3

    .row
      .small-12.medium-4.column
        %label
          Country
          = uf.text_field :country

      .small-12.medium-4.column
        %label
          Postal Code
          = uf.text_field :postal_code

      .small-12.medium-4.column
        %label
          Contact Number
          = uf.text_field :contact_number

    .row
      .small-12.column.small-centered.text-center
        = f.submit 'Save', class: 'button'
