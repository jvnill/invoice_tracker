%dl
  %dt Client
  %dd= @invoice.project.client.name

%dl
  %dt Project
  %dd= @invoice.project.name

%dl
  %dt Date Invoiced
  %dd= @invoice.date.to_s(:default)

%dl
  %dt Invoice Number
  %dd= @invoice.number

%dl.status
  %dt Status
  %dd= @invoice.status.titleize

%table
  %thead
    %tr
      %th Item

      - if @invoice.no_quantity?
        %th Amount (#{@invoice.currency})

      - else
        %th Quantity
        %th Unit Amount
        %th Amount (#{@invoice.currency})

  %tbody= render partial: 'invoice_item', collection: @invoice.invoice_items, locals: { invoice: @invoice }

  %tfoot
    %tr
      %th{ colspan: 3, style: 'text-align:right;' } Total
      %th= number_to_currency @invoice.total_amount, unit: @invoice.currency

