%ul.small-block-grid-8
  %li
    %ul.pricing-table
      %li.title Client
      %li.bullet-item= @client

  %li
    %ul.pricing-table
      %li.title Project
      %li.bullet-item= @project

  %li
    %ul.pricing-table
      %li.title Date Invoiced
      %li.bullet-item= @invoice.date.to_s(:default)

  %li
    %ul.pricing-table
      %li.title Invoice Number
      %li.bullet-item= @invoice.number

  %li
    %ul.pricing-table
      %li.title Status
      %li.bullet-item= @invoice.status.titleize

%table
  %thead
    %tr
      %th Item

      - if @invoice.no_quantity?
        %th Amount (#{@invoice.currency})

      - else
        %th Quantity
        %th Unit Amount
        %th Amount (#{@invoice.currency})

  %tbody= render partial: 'invoice_item', collection: @invoice.invoice_items, locals: { invoice: @invoice }

  %tfoot
    %tr
      %th{ colspan: 3, style: 'text-align:right;' } Total
      %th= number_to_currency @invoice.total_amount, unit: @invoice.currency

