%h1.lead Simple Invoice Tracker

= form_tag create_session_path do
  .row
    .small-12.medium-9.large-6.column.small-centered
      %label
        Email
        = text_field_tag :email, params[:email], placeholder: 'john.doe@example.com', class: 'simple'

  .row
    .small-12.medium-9.large-6.column.small-centered
      %label
        Password
        .right= link_to 'Forgot Password'
        = password_field_tag :password, '', placeholder: 'Password', class: 'simple'

  .row
    .small-12.medium-9.large-6.column.small-centered.text-center
      = submit_tag 'Login', class: 'button'
