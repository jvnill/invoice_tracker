%h1.lead Simple Invoice Tracker

= form_tag create_session_path do
  .row
    .small-12.medium-9.large-6.column.small-centered
      %label
        Email
        = text_field_tag :email, params[:email], placeholder: 'john.doe@example.com'

  .row
    .small-12.medium-9.large-6.column.small-centered
      %label
        Password
        .right= link_to 'Forgot Password', new_password_path
        = password_field_tag :password, '', placeholder: 'Password'

  .row
    .small-12.medium-9.large-6.column.small-centered
      %label
        = check_box_tag :remember_me
        Remember Me

  .row
    .small-12.medium-9.large-6.column.small-centered.text-center
      = submit_tag 'Login', class: 'button'

%br
%h3.subheader.text-center or login through one of the following sites
%br

.row
  .small-12.medium-9.large-6.column.small-centered.text-center
    %ul.small-block-grid-2.medium-block-grid-2
      %li= icon_link('github', 'Github', '/auth/github')
      %li= icon_link('linkedin', 'LinkedIn', '/auth/linkedin')

.clearfix
